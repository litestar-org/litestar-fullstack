{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "resources",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["vite/client","node"]
  },
  "include": [
    "**/*.d.ts",
    "resources/**/*.tsx",
    "resources/**/*.jsx",
    "resources/**/*.js",
    "resources/**/*.ts",
    "vite.config.ts",
    "vite.config.js"
  ]
}
