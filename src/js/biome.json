{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false,
    "defaultBranch": "main",
    "root": "../.."
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["src/routeTree.gen.ts", "src/lib/api/types.gen.ts"],
    "include": ["src/**/*", "index.html", "*.ts", "*.js"]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 180,
    "indentStyle": "space",
    "formatWithErrors": false,
    "lineEnding": "lf",
    "ignore": ["node_modules/**/*", "dist/**/*", "public/**/*", "src/routeTree.gen.ts", "src/lib/api/types.gen.ts"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules/**/*", "dist/**/*", "public/**/*", "src/routeTree.gen.ts", "src/lib/api/types.gen.ts"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "useSortedClasses": "warn"
      }
    },
    "ignore": ["node_modules/**/*", "dist/**/*", "public/**/*", "src/routeTree.gen.ts", "src/lib/api/types.gen.ts"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded"
    }
  }
}
