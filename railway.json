{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "DOCKERFILE",
		"dockerfilePath": "tools/deploy/docker/Dockerfile.distroless",
		"buildEnvironment": "V3"
	},
	"deploy": {
		"runtime": "V2",
		"numReplicas": 1,
		"sleepApplication": true,
		"limitOverride": {
			"containers": {
				"cpu": 1,
				"memoryBytes": 1000000000
			}
		},
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 5
	}
}
