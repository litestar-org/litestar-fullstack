apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: worker-hpa
  namespace: {{ namespace }}
  labels:
    app: worker
    app.kubernetes.io/name: worker
    app.kubernetes.io/component: autoscaling
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: worker
  minReplicas: {{ worker_min_replicas }}
  maxReplicas: {{ worker_max_replicas }}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: {{ hpa_cpu_target }}
{% if hpa_mem_target %}
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: {{ hpa_mem_target }}
{% endif %}
    # For queue-based scaling with KEDA or external metrics adapter:
    # - type: External
    #   external:
    #     metric:
    #       name: redis_queue_length
    #       selector:
    #         matchLabels:
    #           queue: saq
    #     target:
    #       type: AverageValue
    #       averageValue: "10"
  behavior:
    scaleDown:
      # Workers can scale down more aggressively when queue is empty
      stabilizationWindowSeconds: 120
      policies:
        - type: Percent
          value: 50
          periodSeconds: 60
    scaleUp:
      # Scale up quickly when work is queued
      stabilizationWindowSeconds: 0
      policies:
        - type: Percent
          value: 100
          periodSeconds: 15
        - type: Pods
          value: 4
          periodSeconds: 15
      selectPolicy: Max
