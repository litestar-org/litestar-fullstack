apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: {{ namespace }}
type: Opaque
data:
  # These values are expected to be base64 encoded in the Jinja context

  # Database Credentials
  DATABASE_PASSWORD: {{ database_password_b64 }}
  # Fetched from env var specified by --db-password-env

  # Application Secret Key
  SECRET_KEY: {{ secret_key_b64 }}
  # Fetched from env var specified by --app-secret-key-env

  # Add other sensitive values here if needed
  # EXTERNAL_API_KEY: {{ external_api_key_b64 | default("") }}
